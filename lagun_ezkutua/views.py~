from django.shortcuts import render
from django.http import HttpResponse,HttpResponseRedirect
from lagun_ezkutua.models import *
from django.forms import modelformset_factory


# Create your views here.

def index2(request):
    lag = KuadrillaForm()
    return HttpResponse("Lagun ezkutua")

def index(request):
    KuadrillaFormSet = modelformset_factory(Kuadrilla, fields=('lagun_kopurua',),max_num=1)
    if request.method == 'POST':
        formset = KuadrillaFormSet(request.POST, request.FILES)
        if formset.is_valid():
            instances = formset.save()
            return HttpResponseRedirect(str(instances[0].id)+'/izenak/')
    else:
       formset = KuadrillaFormSet()     
    return render(request, 'lagun_ezkutua/sarrera.html', {'formset':formset})

def izenak(request,kuadrilla_id):

    k = Kuadrilla.objects.get(id=kuadrilla_id)
    form = LagunaForm(request.POST or None,extra=k.lagun_kopurua)
    if form.is_valid():
        for (question, answer) in form.extra_lagunak():
            save_(request, question, answer)
        instances = formset.save()
        return HttpResponseRedirect(str(kuadrilla_id)+'/izenak/')
    return render(request, 'lagun_ezkutua/izenak.html', {'form':form})


def emaitza(request,kuadrilla_id):
    
    return HttpResponse("Zozketaren emaitzak")
